#include <stdio.h>
int main (void) {
	float temperaturas[50] = {0};
	float total = 0;
	float media = 0;
	float maior1 = 0;
	float maior2 = 0;
	printf("Insira 50 temperaturas entre -100 e +100 Graus Celcius:\n");
	for (int i = 0; i < 50; ++i)
		scanf("%f", &temperaturas[i]);
		
	for (int i = 0; i<50; ++i)
		total += temperaturas[i];
	media = total / 50;
	
	for (int i = 0; i<50; ++i)
		maior1 += (temperaturas[i] / media);
		maior2 = (maior1 - media);
	
	printf("A media das temperaturas e %f , graus celcius.\n", media);
	printf("O numero de medicoes acima da media e de: %.0f", maior2);
	return 0;
}
