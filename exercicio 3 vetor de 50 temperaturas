int main(void){
	short int temperaturas[4];
	int i=0; 
	float media;
	float total=0;
	int maisalta=0;

	while(i<=4){
		printf("Entre com uma temperatura: ");
		scanf("%d", &temperaturas[i]);
		total+=temperaturas[i];
		i++;
		
	}
	media=(total/i);
	printf("\nA media e: %f", media);

  
	for(i=0;i<=4;i++){
		if (temperaturas[i]>media){
				maisalta+=1;
      
    }
  }
  printf("\nO numero de temperaturas acima da media: %d\n", maisalta);
  
  return 0;
}
